<Window x:Class="Employees_efwpf.AddEmployee"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Employees_efwpf"
        mc:Ignorable="d"
        Title="Добавить сотрудника" Height="420" Width="350" Loaded="Window_Loaded">
    <StackPanel>
        <Label>Имя</Label>
        <TextBox x:Name="fNameTb" Width="150" HorizontalAlignment="Left"/>
        <Label>Фамилия</Label>
        <TextBox x:Name="lNameTb" Width="150" HorizontalAlignment="Left"/>
        <Label>Отчество</Label>
        <TextBox x:Name="mNameTb" Width="150" HorizontalAlignment="Left"/>
        <Label>Дата Рождения</Label>
        <DatePicker Name="dobPicker" Width="150" HorizontalAlignment="Left"></DatePicker>
        <Label>Должность</Label>
        <ComboBox x:Name="posList" Width="250" HorizontalAlignment="Left" SelectionChanged="posList_SelectionChanged"></ComboBox>
        <Label>Фото</Label>
        <Button Width="80" HorizontalAlignment="Left" Click="SelectBtnClick">Выбрать</Button>
        <Button Margin="40" Width="80" HorizontalAlignment="Left" Click="AddBtnClick" Background="Moccasin">Добавить</Button>
    </StackPanel>
</Window>
